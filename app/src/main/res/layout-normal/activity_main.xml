<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.monpc.prover.MainActivity"

    android:weightSum="1">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent"
        android:weightSum="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:elevation="5dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/score"
                    android:textSize="30dp"
                    android:text="score"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_weight="0.44" />

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/help"
                    android:id="@+id/help"
                    />

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/change"
                    android:id="@+id/change"
                    android:layout_weight="0.11" />


            </LinearLayout>

            <TextView
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:typeface="sans"
                android:gravity="center"
                android:text="@string/appdef"
                android:id="@+id/proverb"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_below="@+id/score"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </LinearLayout>



        <ScrollView
            android:layout_width="300dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.32"
            android:padding="5dp"
            android:layout_marginBottom="20dp">

            <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="123dp"
            android:textSize="25dp"
            android:id="@+id/question"
            android:layout_gravity="center"
            android:textColor="#000000"
                android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.41" />
        </ScrollView>


        <EditText
            android:layout_width="298dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="@string/youranswer"
            android:ems="10"
            android:id="@+id/answer"
            android:focusable="false"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_above="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.14" />
        <!-- <com.github.glomadrian.codeinputlib.CodeInput
             android:layout_marginTop="20dp"
             android:layout_width="280dp"
             android:layout_height="40dp"
             app:hint_text="@string/youranswer"
             android:ems="10"
             android:id="@+id/answer"
             android:layout_above="@+id/gridLayout"
             android:layout_centerHorizontal="true"
             />-->


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:foregroundGravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            android:id="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.00">

            <Button
